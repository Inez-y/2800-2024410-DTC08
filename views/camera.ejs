                } catch (error) {
                    console.error('Error analyzing image:', error);
                    alert('Failed to analyze image. Please try again.');
                }

                ingredientsForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    console.log('Ingredients form submit event triggered');
                    const formData = new FormData(ingredientsForm);

                    console.log('FormData entries:');
                    for (const [key, value] of formData.entries()) {
                        console.log(`${key}: ${value}`);
                    }

                    try {
                        const response = await fetch('/save-ingredients', {
                            method: 'POST',
                            body: formData
                        });

                        if (response.ok) {
                            ingredientsModal.classList.add('hidden');
                            successMessage.classList.remove('hidden');
                            setTimeout(() => {
                                successMessage.classList.add('hidden');
                            }, 3000);
                        } else {
                            const errorText = await response.text();
                            console.error('Failed to save ingredients:', errorText);
                            alert('Failed to save ingredients. Please try again.');
                        }
                    } catch (error) {
                        console.error('Error saving ingredients:', error);
                        alert('Failed to save ingredients. Please try again.');
                    }
                });
            </script>