<%- include("templates/htmlDocHeader") %>
<%- include("templates/header") %>

<main class="flex flex-col items-center justify-center h-screen">
    <div class="w-full max-w-xs">
        <h2 class="block text-gray-700 text-lg font-bold mb-4">Favorite Recipes</h2>
        <ul id="favorites-list" class="mb-4">
            <!-- Favorite recipes will be dynamically added here -->
            <% for (let i = 0; i < recipes.length; i++) { %>
                <a href="/recipe/<%= recipes[i]._id %>">
                
                    <li class="bg-white shadow-md rounded mb-4 p-4 flex flex-col justify-between items-start">
                        <%- include('templates/recipeCard', {recipe: recipes[i]}) %>
                        <button class="delete-recipe bg-red-400 hover:bg-red-500 text-white font-bold py-2 px-4 rounded mt-4 self-end focus:outline-none focus:shadow-outline" data-index="<%= i %>">
                            Delete
                        </button>
                    </li>
                </a>
            <% } %>
        </ul>
    </div>
</main>

<%- include("templates/footer") %>

