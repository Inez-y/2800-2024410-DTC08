<%- include("templates/htmlDocHeader") %>
    <%- include("templates/header") %>

    <main class="flex flex-col items-center justify-center h-screen">
        <form class="w-full max-w-xs" action='/logIn' method='post'>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">User Name</label>
                <input id="email" name='username' type='text' placeholder='User Name' class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" >
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
                <input id="password" name='password' type='password' placeholder='Password' class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" >
            </div>
            <div class="flex items-center justify-center">
                <button class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Login
                </button>
            </div>
        </form>
        <p>
            <a href="/forgot" class="text-gray-700">Forgot password?</a>
        </p>
        <!-- Displays messages from server -->
        <%- include("templates/message") %>
    </main>
    <%- include("templates/footer") %>
