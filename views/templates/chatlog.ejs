<!-- 
*----------------------------------------------------------------------*
|   Chatlog logic to display a dialogue and communicate with database  |    
*----------------------------------------------------------------------*  
-->
<div class="flex flex-col m-2">
    <div class="" id="chatBubble">
        <!-- If that's user, chat bubble appears on the right side -->
        <!-- Why if statements works in opposite way?! -->
        <% if (user == 'ReciPT') { %>
        <div class="text-right px-4 font-semibold"> You </div>
        <div class="text-right align-middle p-10 bg-white rounded-3xl">
            <%= log %>
        </div>
        <% } else { %>
        <div class="px-4 font-semibold">
            <p> ReciPT </p>
        </div>
        <div class="p-10 bg-buttongreen rounded-3xl text-gray-50 opacity-0">
            <span style="white-space: pre-line"><%= log %></span>
        </div>
        <%} %>
    </div>

    <!-- To save favourite -->
    <div>
        <% if (isRecipe) { %>
        <form action="/save" method="post">
            <input type="hidden" name="recipe" value="<%= log %>">
            <button type="submit" class="material-icons text-2xl text-red-400 text-right">star</button>
        </form>
        <% } %>
    </div>


</div>
<!-- End of chatlog.ejs -->