<div class="flex flex-col m-2">
    <div class="" id="chatBubble">
        <!-- If that's user, right side text -->
        <!-- Why if statements works in opposite way?! -->
        <% if (user == 'ReciPT') { %>
        <div class="text-right px-4 font-semibold"> You </div>
        <div class="text-right align-middle p-10 bg-white rounded-3xl">
            <%= log %>
        </div>
        <% } else { %>

        <div class="px-4 font-semibold"> ReciPT </div>
        <% if (isRecipe) { %>
        <!-- To save favourite -->
        <form action="/save" method="post">
            star
            <input type="hidden" name="recipe" value="<%= log %>">
            <button type="submit" class="material-icons text-2xl text-buttongreen">star</button>
        </form>
        <% } %>
        <div class="p-10 bg-buttongreen rounded-3xl text-gray-50 opacity-0">
            <%= log %>
        </div>
        <%} %>
    </div>
</div>
